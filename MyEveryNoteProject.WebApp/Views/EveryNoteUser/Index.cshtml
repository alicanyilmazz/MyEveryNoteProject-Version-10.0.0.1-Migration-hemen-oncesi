@model IEnumerable<MyEveryNoteProject.Entities.EveryNoteUser>
@using MyEveryNoteProject.WebApp
@{
    Layout = "~/Views/Shared/_BackgroundLayout.cshtml";
}

<div class="row">
    <div class="col-md-10 offset-md-1" style="text-align:center;">
        <h2 >Users</h2>
    </div>
</div>

<div class="container-fluid" style="margin-top:20px;">

    <p>
        @BootstrapHelper.OutlineLinkButton("/EveryNoteUser/Create/", "info", string.Empty, string.Empty, "fas fa-plus-circle", "Create New")
    </p>
    <table class="table small">
        <tr style="background-color:palegoldenrod;">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAdmin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifierUser)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="tbl">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAdmin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifierUser)
                </td>
                <td>
                    @BootstrapHelper.DefaultLinkButton("/EveryNoteUser/Edit/" + item.Id, "warning", "btn-sm", "Edit", "far fa-edit", string.Empty)
                    @BootstrapHelper.DefaultLinkButton("/EveryNoteUser/Details/" + item.Id, "info", "btn-sm", "Details", "fas fa-search", string.Empty)
                    @BootstrapHelper.DefaultLinkButton("/EveryNoteUser/Delete/" + item.Id, "danger", "btn-sm", "Delete", "fas fa-trash-alt", string.Empty)
                </td>
            </tr>
        }

    </table>

</div>
<style>
    .tbl:hover {
        background-color: lightcoral;
        color: whitesmoke;
    }

    .tbl {
        background-color: bisque;
        font-size: larger;
    }

    td {
        vertical-align: middle !important;
    }

    th {
        font-size: large;
    }
</style>


