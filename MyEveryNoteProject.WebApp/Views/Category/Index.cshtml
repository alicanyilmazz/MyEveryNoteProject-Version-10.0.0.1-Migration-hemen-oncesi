@using MyEveryNoteProject.WebApp
@model IEnumerable<MyEveryNoteProject.Entities.Category>

@{
    Layout = "~/Views/Shared/_BackgroundLayout.cshtml";
}



    <div class="row">
        <div class="col-md-10 offset-md-1" style="text-align:center;">
            <h2>Categories</h2>
        </div>
    </div>

    <div class="container">
        <p>
            @BootstrapHelper.OutlineLinkButton("/Category/Create/", "info", string.Empty, string.Empty, "fas fa-plus-circle", "Create New")
        </p>
        <table class="table">
            <tr style="background-color:burlywood;">
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifierUser)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="tbl">
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifierUser)
                    </td>
                    <td>
                        @BootstrapHelper.DefaultLinkButton("/Category/Edit/" + item.Id, "warning", "btn-sm", "Edit", "far fa-edit", string.Empty)
                        @BootstrapHelper.DefaultLinkButton("/Category/Details/" + item.Id, "info", "btn-sm", "Details", "fas fa-search", string.Empty)
                        @BootstrapHelper.DefaultLinkButton("/Category/Delete/" + item.Id, "danger", "btn-sm", "Delete", "fas fa-trash-alt", string.Empty)
                    </td>
                </tr>
            }

        </table>
    </div>

    <style>
        .tbl:hover {
            background-color: lightcoral;
            color: whitesmoke;
        }

        .tbl {
            background-color: bisque;
        }
    </style>



